---
import Logo from './Logo.astro';
---

<footer class="bg-bg-primary border-t border-border">
  <!-- Oversized tagline -->
  <div class="mx-auto max-w-[80rem] px-6 pt-20 pb-12">
    <h2 class="font-heading text-4xl sm:text-5xl md:text-7xl lg:text-8xl font-bold text-text-primary leading-tight overflow-hidden break-words">
      Find contracts.<br />Win business.
    </h2>
  </div>

  <!-- Footer columns -->
  <div class="mx-auto max-w-[80rem] px-6 pb-12 grid grid-cols-2 md:grid-cols-4 gap-8">
    <!-- Column 1: Logo + description -->
    <div class="col-span-2 md:col-span-1">
      <Logo />
      <p class="mt-4 text-text-secondary text-sm leading-relaxed">
        UK procurement intelligence for suppliers.
      </p>
    </div>

    <!-- Column 2: Product -->
    <div>
      <h3 class="font-heading font-bold text-text-primary mb-4 text-sm uppercase tracking-wider">Product</h3>
      <ul class="space-y-3 text-sm">
        <li>
          <a href="#how-it-works" class="text-text-secondary hover:text-text-primary transition-colors">
            How It Works
          </a>
        </li>
        <li>
          <a href="#features" class="text-text-secondary hover:text-text-primary transition-colors">
            Features
          </a>
        </li>
        <li>
          <a href="#pricing" class="text-text-secondary hover:text-text-primary transition-colors">
            Pricing
          </a>
        </li>
      </ul>
    </div>

    <!-- Column 3: Resources -->
    <div>
      <h3 class="font-heading font-bold text-text-primary mb-4 text-sm uppercase tracking-wider">Resources</h3>
      <ul class="space-y-3 text-sm">
        <li>
          <a href="/blog" class="text-text-secondary hover:text-text-primary transition-colors">
            Blog
          </a>
        </li>
        <li>
          <a href="mailto:hello@tendhunt.com" class="text-text-secondary hover:text-text-primary transition-colors">
            Contact
          </a>
        </li>
      </ul>
    </div>

    <!-- Column 4: Legal + Social -->
    <div>
      <h3 class="font-heading font-bold text-text-primary mb-4 text-sm uppercase tracking-wider">Legal</h3>
      <ul class="space-y-3 text-sm">
        <li>
          <a href="/privacy" class="text-text-secondary hover:text-text-primary transition-colors">
            Privacy Policy
          </a>
        </li>
        <li>
          <a href="/terms" class="text-text-secondary hover:text-text-primary transition-colors">
            Terms of Service
          </a>
        </li>
      </ul>

      <!-- Social icons -->
      <div class="flex gap-4 mt-6">
        <a href="#" aria-label="LinkedIn" class="text-text-secondary hover:text-text-primary transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </a>
        <a href="#" aria-label="X (Twitter)" class="text-text-secondary hover:text-text-primary transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M18.901 1.153h3.68l-8.04 9.19L24 22.846h-7.406l-5.8-7.584-6.638 7.584H.474l8.6-9.83L0 1.154h7.594l5.243 6.932L18.901 1.153ZM17.61 20.644h2.039L6.486 3.24H4.298L17.61 20.644Z"/>
          </svg>
        </a>
      </div>
    </div>
  </div>

  <!-- Copyright bar -->
  <div class="mx-auto max-w-[80rem] px-6 py-6 border-t border-border">
    <p class="text-text-muted text-xs">
      &copy; {new Date().getFullYear()} TendHunt. All rights reserved.
    </p>
  </div>
</footer>
