---
// SignalFeed.astro
// Vertical connecting line from hero to next section.
// Signals are shown on the hero map itself (HeroMapIllustration).
// This component just provides the visual line + label transition.
---

<section class="sf-section" id="signals">
  <!-- Vertical connecting line from hero -->
  <div class="sf-connector" aria-hidden="true">
    <div class="sf-connector__line"></div>
    <div class="sf-connector__dot"></div>
  </div>

  <!-- Section label -->
  <div class="sf-label">
    <span class="sf-label__badge">
      <span class="sf-label__pulse"></span>
      Live Signal Feed
    </span>
    <p class="sf-label__sub">Real procurement signals detected across the UK</p>
  </div>
</section>

<style>
  .sf-section {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0 1.5rem 3rem;
  }

  /* Vertical connecting line */
  .sf-connector {
    position: relative;
    width: 1px;
    height: 100px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  @media (min-width: 1024px) {
    .sf-connector {
      height: 120px;
    }
  }

  .sf-connector__line {
    width: 1px;
    height: 100%;
    background: linear-gradient(
      to bottom,
      transparent 0%,
      rgba(229, 255, 0, 0.3) 40%,
      rgba(229, 255, 0, 0.5) 100%
    );
    transform-origin: top center;
    animation: sfLineGrow 1.2s ease-out 0.3s both;
  }

  .sf-connector__dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #E5FF00;
    box-shadow: 0 0 12px rgba(229, 255, 0, 0.5);
    margin-top: -1px;
    animation: sfDotAppear 0.4s ease-out 1.4s both;
  }

  @keyframes sfLineGrow {
    from { transform: scaleY(0); }
    to { transform: scaleY(1); }
  }

  @keyframes sfDotAppear {
    from { opacity: 0; transform: scale(0); }
    to { opacity: 1; transform: scale(1); }
  }

  /* Section label */
  .sf-label {
    text-align: center;
    margin-top: 1.5rem;
    animation: sfFadeUp 0.6s ease-out 1.6s both;
  }

  .sf-label__badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-family: "Space Grotesk Variable", ui-sans-serif, system-ui, sans-serif;
    font-size: 13px;
    font-weight: 600;
    color: #E5FF00;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .sf-label__pulse {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: #E5FF00;
    animation: sfPulseDot 2s ease-in-out infinite;
  }

  @keyframes sfPulseDot {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.3; }
  }

  .sf-label__sub {
    margin-top: 0.5rem;
    font-family: "Inter Variable", ui-sans-serif, system-ui, sans-serif;
    font-size: 15px;
    color: #737373;
  }

  @keyframes sfFadeUp {
    from { opacity: 0; transform: translateY(16px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @media (prefers-reduced-motion: reduce) {
    .sf-connector__line,
    .sf-connector__dot,
    .sf-label {
      animation: none;
      opacity: 1;
      transform: none;
    }
    .sf-label__pulse {
      animation: none;
    }
  }

  @media (max-width: 639px) {
    .sf-connector { height: 80px; }
    .sf-label__sub { font-size: 13px; }
  }
</style>
