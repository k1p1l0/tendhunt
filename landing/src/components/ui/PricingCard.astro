---
import Button from '../Button.astro';

interface Props {
  tier: string;
  description: string;
  features: string[];
}

const { tier, description, features } = Astro.props;
---

<article class="bg-bg-card rounded-2xl border border-border p-8 flex flex-col">
  <h3 class="font-heading text-xl font-bold text-text-primary">{tier}</h3>
  <p class="mt-2 text-text-secondary text-sm leading-relaxed">{description}</p>

  <ul class="mt-6 mb-8 flex flex-col gap-3 flex-1" role="list">
    {features.map((feature) => (
      <li class="flex items-start gap-3 text-text-body text-sm">
        <svg
          class="mt-0.5 h-4 w-4 flex-shrink-0 text-accent"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2.5"
          stroke-linecap="round"
          stroke-linejoin="round"
          aria-hidden="true"
        >
          <polyline points="20 6 9 17 4 12" />
        </svg>
        <span>{feature}</span>
      </li>
    ))}
  </ul>

  <Button
    href="#waitlist"
    variant="primary"
    size="md"
    class="w-full"
  >
    Join Waitlist for Pricing
  </Button>
</article>
