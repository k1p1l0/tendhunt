---
import PricingCard from '../ui/PricingCard.astro';

const tiers = [
  {
    tier: 'Scout',
    description: 'For individual business developers',
    features: [
      '10 credits/month',
      'Search 200K+ contracts',
      'Basic filters',
      'Email alerts',
    ],
  },
  {
    tier: 'Hunter',
    description: 'For growing sales teams',
    features: [
      '50 credits/month',
      'Everything in Scout',
      'Advanced filters & AI scoring',
      'Buyer intelligence',
      'Priority support',
    ],
  },
  {
    tier: 'Enterprise',
    description: 'For large organizations',
    features: [
      'Custom credits',
      'Everything in Hunter',
      'API access',
      'Dedicated account manager',
      'SSO & team management',
    ],
  },
];
---

<section id="pricing" class="bg-bg-secondary">
  <div class="mx-auto max-w-[80rem] px-6 py-24">
    <div class="text-center mb-16">
      <h2 class="font-heading text-3xl md:text-4xl font-bold text-text-primary">
        Pricing
      </h2>
      <p class="mt-4 text-text-secondary text-lg max-w-xl mx-auto">
        Join the waitlist for launch pricing
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {tiers.map((t) => (
        <PricingCard
          tier={t.tier}
          description={t.description}
          features={t.features}
          highlight={t.highlight}
        />
      ))}
    </div>
  </div>
</section>
