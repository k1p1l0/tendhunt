---
// SocialProofSection.astro
// Market statistics + trust/compliance badges.
// Two-column responsive layout with large lime accent numbers.
---

<section class="bg-bg-primary" aria-label="Market statistics and trust signals">
  <div class="mx-auto max-w-[80rem] px-6 py-16">
    <div class="sp-grid">
      <!-- Left column: Market statistics -->
      <div class="sp-stats">
        <h2 class="sr-only">Market statistics</h2>
        <div class="sp-stat">
          <span class="sp-stat__value">&pound;434B</span>
          <span class="sp-stat__label">UK Public Sector Procurement (annual)</span>
        </div>
        <div class="sp-stat">
          <span class="sp-stat__value">200,000+</span>
          <span class="sp-stat__label">Active Contract Opportunities</span>
        </div>
        <div class="sp-stat">
          <span class="sp-stat__value">6</span>
          <span class="sp-stat__label">Buying Signal Types</span>
        </div>
      </div>

      <!-- Right column: Trust signals -->
      <div class="sp-trust">
        <h2 class="sr-only">Trust and compliance</h2>
        <div class="sp-badges">
          <div class="sp-badge">
            <div class="sp-badge__icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" />
                <polyline points="9 12 11 14 15 10" />
              </svg>
            </div>
            <div class="sp-badge__text">
              <span class="sp-badge__title">GDPR Compliant</span>
              <span class="sp-badge__sub">Full data protection compliance</span>
            </div>
          </div>

          <div class="sp-badge">
            <div class="sp-badge__icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                <rect x="3" y="11" width="18" height="11" rx="2" ry="2" />
                <path d="M7 11V7a5 5 0 0 1 10 0v4" />
              </svg>
            </div>
            <div class="sp-badge__text">
              <span class="sp-badge__title">UK Data Protection</span>
              <span class="sp-badge__sub">ICO registered data controller</span>
            </div>
          </div>

          <div class="sp-badge">
            <div class="sp-badge__icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                <path d="M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2 2 6.477 2 12s4.477 10 10 10z" />
                <path d="M2 12h20" />
                <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z" />
              </svg>
            </div>
            <div class="sp-badge__text">
              <span class="sp-badge__title">Cloudflare Secured</span>
              <span class="sp-badge__sub">Enterprise-grade edge security</span>
            </div>
          </div>

          <!-- Coming soon badge -->
          <div class="sp-badge sp-badge--muted">
            <div class="sp-badge__icon sp-badge__icon--muted">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                <circle cx="12" cy="12" r="10" />
                <polyline points="12 6 12 12 16 14" />
              </svg>
            </div>
            <div class="sp-badge__text">
              <span class="sp-badge__title sp-badge__title--muted">Coming Soon: ISO 27001</span>
              <span class="sp-badge__sub">Information security certification in progress</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Visually hidden heading for screen readers */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }

  /* Grid layout */
  .sp-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
  }

  @media (min-width: 768px) {
    .sp-grid {
      grid-template-columns: 1fr 1fr;
      gap: 3rem;
      align-items: start;
    }
  }

  /* ===== Statistics column ===== */
  .sp-stats {
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }

  .sp-stat {
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
  }

  .sp-stat__value {
    font-family: var(--font-heading);
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--color-accent);
    line-height: 1;
    letter-spacing: -0.03em;
  }

  @media (min-width: 768px) {
    .sp-stat__value {
      font-size: 3.25rem;
    }
  }

  .sp-stat__label {
    font-family: var(--font-body);
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
    line-height: 1.4;
  }

  /* ===== Trust badges column ===== */
  .sp-trust {
    display: flex;
    flex-direction: column;
  }

  .sp-badges {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .sp-badge {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1rem 1.25rem;
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    transition: border-color 0.2s ease;
  }

  .sp-badge:hover {
    border-color: rgba(229, 255, 0, 0.15);
  }

  .sp-badge--muted {
    opacity: 0.55;
    border-style: dashed;
  }

  .sp-badge--muted:hover {
    border-color: var(--color-border);
  }

  .sp-badge__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 10px;
    background: rgba(229, 255, 0, 0.08);
    color: var(--color-accent);
    flex-shrink: 0;
  }

  .sp-badge__icon--muted {
    background: rgba(115, 115, 115, 0.1);
    color: var(--color-text-muted);
  }

  .sp-badge__text {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
    min-width: 0;
  }

  .sp-badge__title {
    font-family: var(--font-heading);
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--color-text-primary);
  }

  .sp-badge__title--muted {
    color: var(--color-text-muted);
  }

  .sp-badge__sub {
    font-family: var(--font-body);
    font-size: 0.8125rem;
    color: var(--color-text-muted);
    line-height: 1.4;
  }
</style>
