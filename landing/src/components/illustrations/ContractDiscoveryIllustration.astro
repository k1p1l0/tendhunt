---
// ContractDiscoveryIllustration.astro
// CSS-only animated bar chart with 4 bars rising from bottom.
// Lime accent gradient. ~200x200px viewbox area.
// Decorative illustration â€” hidden from assistive technology.
---

<div class="cd-illustration" aria-hidden="true">
  <div class="cd-chart">
    <div class="cd-bar cd-bar--1">
      <div class="cd-bar__fill"></div>
    </div>
    <div class="cd-bar cd-bar--2">
      <div class="cd-bar__fill"></div>
    </div>
    <div class="cd-bar cd-bar--3">
      <div class="cd-bar__fill"></div>
    </div>
    <div class="cd-bar cd-bar--4">
      <div class="cd-bar__fill"></div>
    </div>
  </div>
  <!-- Baseline -->
  <div class="cd-baseline"></div>
</div>

<style>
  .cd-illustration {
    position: relative;
    width: 200px;
    height: 200px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-end;
  }

  .cd-chart {
    display: flex;
    align-items: flex-end;
    gap: 16px;
    height: 160px;
    padding: 0 20px;
  }

  .cd-bar {
    width: 28px;
    border-radius: 4px 4px 0 0;
    overflow: hidden;
    position: relative;
  }

  .cd-bar__fill {
    width: 100%;
    height: 100%;
    background: linear-gradient(to top, rgba(229, 255, 0, 0.3), rgba(229, 255, 0, 0.8));
    border-radius: 4px 4px 0 0;
    transform-origin: bottom center;
    animation: cdBarRise 1.2s cubic-bezier(0.22, 1, 0.36, 1) both;
  }

  .cd-bar--1 {
    height: 55%;
  }
  .cd-bar--1 .cd-bar__fill {
    animation-delay: 0s;
  }

  .cd-bar--2 {
    height: 80%;
  }
  .cd-bar--2 .cd-bar__fill {
    animation-delay: 0.15s;
  }

  .cd-bar--3 {
    height: 45%;
  }
  .cd-bar--3 .cd-bar__fill {
    animation-delay: 0.3s;
  }

  .cd-bar--4 {
    height: 95%;
  }
  .cd-bar--4 .cd-bar__fill {
    animation-delay: 0.45s;
    background: linear-gradient(to top, rgba(229, 255, 0, 0.5), #E5FF00);
  }

  .cd-baseline {
    width: 160px;
    height: 2px;
    background: linear-gradient(to right, transparent, rgba(229, 255, 0, 0.4), transparent);
    margin-top: 0;
    flex-shrink: 0;
  }

  @keyframes cdBarRise {
    from {
      transform: scaleY(0);
    }
    to {
      transform: scaleY(1);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .cd-bar__fill {
      animation: none;
      transform: scaleY(1);
    }
  }
</style>
