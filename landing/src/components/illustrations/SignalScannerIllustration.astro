---
// SignalScannerIllustration.astro
// CSS-only concentric pulse rings — 3 rings expanding from center
// with opacity fade-out, infinite loop. Lime accent. ~200x200px.
// Decorative illustration — hidden from assistive technology.
---

<div class="ss-illustration" aria-hidden="true">
  <div class="ss-ring ss-ring--1"></div>
  <div class="ss-ring ss-ring--2"></div>
  <div class="ss-ring ss-ring--3"></div>
  <!-- Center dot -->
  <div class="ss-core">
    <div class="ss-core__glow"></div>
    <div class="ss-core__dot"></div>
  </div>
</div>

<style>
  .ss-illustration {
    position: relative;
    width: 200px;
    height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ss-ring {
    position: absolute;
    border-radius: 50%;
    border: 2px solid rgba(229, 255, 0, 0.6);
    animation: ssPulse 3s ease-out infinite;
  }

  .ss-ring--1 {
    width: 40px;
    height: 40px;
    animation-delay: 0s;
  }

  .ss-ring--2 {
    width: 40px;
    height: 40px;
    animation-delay: 1s;
  }

  .ss-ring--3 {
    width: 40px;
    height: 40px;
    animation-delay: 2s;
  }

  .ss-core {
    position: relative;
    z-index: 1;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ss-core__glow {
    position: absolute;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(229, 255, 0, 0.25) 0%, transparent 70%);
    animation: ssGlow 2s ease-in-out infinite;
  }

  .ss-core__dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: #E5FF00;
    box-shadow: 0 0 16px rgba(229, 255, 0, 0.6);
    position: relative;
    z-index: 1;
  }

  @keyframes ssPulse {
    0% {
      width: 40px;
      height: 40px;
      opacity: 0.7;
      border-color: rgba(229, 255, 0, 0.6);
    }
    100% {
      width: 180px;
      height: 180px;
      opacity: 0;
      border-color: rgba(229, 255, 0, 0.1);
    }
  }

  @keyframes ssGlow {
    0%, 100% {
      transform: scale(1);
      opacity: 1;
    }
    50% {
      transform: scale(1.3);
      opacity: 0.6;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .ss-ring {
      animation: none;
      opacity: 0;
    }

    .ss-ring--1 {
      opacity: 0.3;
      width: 80px;
      height: 80px;
    }

    .ss-ring--2 {
      opacity: 0.2;
      width: 130px;
      height: 130px;
    }

    .ss-ring--3 {
      opacity: 0.1;
      width: 170px;
      height: 170px;
    }

    .ss-core__glow {
      animation: none;
    }
  }
</style>
