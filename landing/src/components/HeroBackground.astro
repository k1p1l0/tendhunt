---
// CSS-only animated grid + floating particles background
// Zero JS â€” all animations via CSS @keyframes on compositor thread
---

<div class="hero-bg" aria-hidden="true">
  <!-- Animated grid -->
  <div class="hero-grid"></div>

  <!-- Radial glow behind text area -->
  <div class="hero-glow"></div>

  <!-- Floating particles -->
  <div class="hero-particles">
    <span class="particle particle-1"></span>
    <span class="particle particle-2"></span>
    <span class="particle particle-3"></span>
    <span class="particle particle-4"></span>
    <span class="particle particle-5"></span>
    <span class="particle particle-6"></span>
    <span class="particle particle-7"></span>
    <span class="particle particle-8"></span>
  </div>

  <!-- Horizontal accent line that sweeps -->
  <div class="hero-scanline"></div>
</div>

<style>
  .hero-bg {
    position: absolute;
    inset: 0;
    overflow: hidden;
    pointer-events: none;
  }

  /* Animated grid pattern */
  .hero-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(to right, rgba(229, 255, 0, 0.03) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(229, 255, 0, 0.03) 1px, transparent 1px);
    background-size: 60px 60px;
    mask-image: radial-gradient(ellipse 80% 70% at 50% 40%, black 20%, transparent 70%);
    -webkit-mask-image: radial-gradient(ellipse 80% 70% at 50% 40%, black 20%, transparent 70%);
    animation: gridPulse 8s ease-in-out infinite;
  }

  /* Radial lime glow */
  .hero-glow {
    position: absolute;
    top: 20%;
    left: 50%;
    transform: translateX(-50%);
    width: 800px;
    height: 500px;
    background: radial-gradient(ellipse at center, rgba(229, 255, 0, 0.06) 0%, transparent 70%);
    animation: glowPulse 6s ease-in-out infinite;
  }

  /* Floating particles container */
  .hero-particles {
    position: absolute;
    inset: 0;
  }

  /* Individual particle dots */
  .particle {
    position: absolute;
    border-radius: 50%;
    background: var(--color-accent);
  }

  @media (min-width: 768px) {
    .particle {
      will-change: transform, opacity;
    }
  }

  .particle-1 {
    width: 3px; height: 3px;
    top: 15%; left: 10%;
    opacity: 0.4;
    animation: float1 12s ease-in-out infinite;
  }
  .particle-2 {
    width: 2px; height: 2px;
    top: 25%; left: 85%;
    opacity: 0.3;
    animation: float2 15s ease-in-out infinite;
  }
  .particle-3 {
    width: 4px; height: 4px;
    top: 60%; left: 75%;
    opacity: 0.2;
    animation: float3 10s ease-in-out infinite;
  }
  .particle-4 {
    width: 2px; height: 2px;
    top: 70%; left: 20%;
    opacity: 0.35;
    animation: float1 14s ease-in-out infinite reverse;
  }
  .particle-5 {
    width: 3px; height: 3px;
    top: 40%; left: 60%;
    opacity: 0.25;
    animation: float2 11s ease-in-out infinite;
  }
  .particle-6 {
    width: 2px; height: 2px;
    top: 80%; left: 45%;
    opacity: 0.3;
    animation: float3 13s ease-in-out infinite reverse;
  }
  .particle-7 {
    width: 3px; height: 3px;
    top: 10%; left: 50%;
    opacity: 0.2;
    animation: float1 16s ease-in-out infinite;
  }
  .particle-8 {
    width: 2px; height: 2px;
    top: 50%; left: 30%;
    opacity: 0.3;
    animation: float2 12s ease-in-out infinite reverse;
  }

  /* Sweeping horizontal accent line */
  .hero-scanline {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(229, 255, 0, 0.15), transparent);
    animation: scanline 8s linear infinite;
  }

  /* Keyframes */
  @keyframes gridPulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }

  @keyframes glowPulse {
    0%, 100% {
      opacity: 1;
      transform: translateX(-50%) scale(1);
    }
    50% {
      opacity: 0.6;
      transform: translateX(-50%) scale(1.1);
    }
  }

  @keyframes float1 {
    0%, 100% { transform: translate(0, 0); }
    25% { transform: translate(15px, -20px); }
    50% { transform: translate(-10px, -35px); }
    75% { transform: translate(20px, -15px); }
  }

  @keyframes float2 {
    0%, 100% { transform: translate(0, 0); }
    25% { transform: translate(-20px, 15px); }
    50% { transform: translate(10px, -25px); }
    75% { transform: translate(-15px, 20px); }
  }

  @keyframes float3 {
    0%, 100% { transform: translate(0, 0); }
    33% { transform: translate(25px, -10px); }
    66% { transform: translate(-20px, -30px); }
  }

  @keyframes scanline {
    0% { top: 0; left: -100%; }
    100% { top: 100%; left: 100%; }
  }

  @media (prefers-reduced-motion: reduce) {
    .hero-grid,
    .hero-glow,
    .hero-scanline {
      animation: none;
    }

    .particle {
      animation: none;
      opacity: 0.2;
    }
  }
</style>
