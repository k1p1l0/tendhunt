<article class="bg-bg-secondary border border-border rounded-lg overflow-hidden hover:border-accent transition group">
  {{#if feature_image}}
  <a href="{{url}}" class="block">
    <img src="{{feature_image}}" alt="{{title}}" class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300">
  </a>
  {{/if}}

  <div class="p-6">
    {{#if primary_tag}}
    <a href="{{primary_tag.url}}" class="inline-block px-2 py-0.5 bg-bg-tertiary text-accent text-xs font-medium rounded mb-3 hover:bg-accent hover:text-text-dark transition">
      {{primary_tag.name}}
    </a>
    {{/if}}

    <h2 class="text-xl font-heading font-bold text-text-primary mb-2 group-hover:text-accent transition leading-snug">
      <a href="{{url}}">{{title}}</a>
    </h2>
    <p class="text-text-secondary text-sm mb-4 line-clamp-2">{{excerpt words="25"}}</p>

    <div class="flex items-center justify-between text-xs text-text-muted">
      <div class="flex items-center gap-2">
        {{#if primary_author.profile_image}}
        <img src="{{primary_author.profile_image}}" alt="{{primary_author.name}}" class="w-6 h-6 rounded-full">
        {{/if}}
        <span>{{primary_author.name}}</span>
      </div>
      <div class="flex items-center gap-2">
        <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMM DD, YYYY"}}</time>
        <span>&middot;</span>
        <span>{{reading_time}}</span>
      </div>
    </div>
  </div>
</article>
