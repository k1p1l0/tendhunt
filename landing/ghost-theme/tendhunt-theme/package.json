{
  "name": "tendhunt-theme",
  "version": "1.0.0",
  "description": "TendHunt blog theme with Tailwind CSS",
  "engines": {
    "ghost": ">=5.0.0"
  },
  "scripts": {
    "dev": "npx tailwindcss -i ./assets/css/index.css -o ./assets/built/index.css --watch",
    "build": "npx tailwindcss -i ./assets/css/index.css -o ./assets/built/index.css --minify",
    "zip": "npm run build && bestzip ../tendhunt-theme.zip * -x .git node_modules"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.0",
    "@tailwindcss/typography": "^0.5.10",
    "concurrently": "^8.2.2",
    "bestzip": "^2.2.1"
  },
  "config": {
    "posts_per_page": 12
  }
}
