{{!< default}}

<article class="mx-auto max-w-4xl px-6 py-16">
  <header class="mb-8">
    {{#if primary_tag}}
    <a href="{{primary_tag.url}}" class="inline-block px-3 py-1 bg-bg-secondary text-accent text-xs font-medium rounded-full mb-4 hover:bg-accent hover:text-text-dark transition">
      {{primary_tag.name}}
    </a>
    {{/if}}

    <h1 class="text-4xl md:text-5xl font-heading font-bold text-text-primary mb-4 leading-tight">{{title}}</h1>

    <div class="flex items-center gap-4 text-sm text-text-secondary">
      {{#if primary_author.profile_image}}
      <img src="{{primary_author.profile_image}}" alt="{{primary_author.name}}" class="w-10 h-10 rounded-full">
      {{/if}}
      <div>
        <span class="text-text-primary font-medium">{{primary_author.name}}</span>
        <div class="flex items-center gap-2 text-text-muted text-xs">
          <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM DD, YYYY"}}</time>
          <span>&middot;</span>
          <span>{{reading_time}}</span>
        </div>
      </div>
    </div>
  </header>

  {{#if feature_image}}
  <figure class="mb-8">
    <img src="{{feature_image}}" alt="{{title}}" class="w-full rounded-lg">
    {{#if feature_image_caption}}
    <figcaption class="mt-2 text-center text-sm text-text-muted">
      {{{feature_image_caption}}}
    </figcaption>
    {{/if}}
  </figure>
  {{/if}}

  <div class="gh-content">
    {{content}}
  </div>

  {{#if tags}}
  <footer class="mt-12 pt-8 border-t border-border">
    <div class="flex flex-wrap gap-2">
      {{#foreach tags}}
        <a href="{{url}}" class="px-3 py-1 bg-bg-secondary text-text-secondary text-sm rounded-full hover:bg-accent hover:text-text-dark transition">
          {{name}}
        </a>
      {{/foreach}}
    </div>
  </footer>
  {{/if}}
</article>
